@model NetFrameworkWebStarter.Models.UserModel
@using NetFrameworkWebStarter.Web.Class;
@using NetFrameworkWebStarter.Infrastructure;
@using System.Web.Optimization;
@{
    ViewBag.Title = "User Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/assets/node_modules/switchery/switchery.min.css" rel="stylesheet" />
@{

    var userTypeId = Model.UserTypeId;
    ViewBag.Title = Model.UserId > 0 ? "Edit User" : "Add User";
}

@(Styles.Render("~/Content/cssDataTableTheme"))
<style>
    .dataTables_length {
        margin-right: 10px;
    }

    table.table thead .sorting,
    table.table thead .sorting_asc,
    table.table thead .sorting_desc {
        background: none !important;
    }

    .input-validation-error {
        border-color: #e46a76;
    }
</style>

<div class="row page-titles">
    <div class="col-md-5 align-self-center">
        <h4 class="text-themecolor">@ViewBag.Title</h4>
    </div>
    <div class="col-md-7 align-self-center text-right">
        <div class="d-flex justify-content-end align-items-center">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action(Actions.Index, Controllers.Home)">Home</a></li>
                <li class="breadcrumb-item active">Users</li>
            </ol>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card ">
            <div class="card-body">
                @using (Html.BeginForm(Actions.Manage, Controllers.Users, FormMethod.Post, new { id = "frmManageUser" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.UserId)
                    @Html.Hidden("OldRate", 0) <!-- Placeholder hidden if needed -->
                    @Html.Hidden("ServiceCentres", "") <!-- Placeholder -->
                    @Html.Hidden("SYSPROCompanyAccess", "") <!-- Placeholder -->
                    @Html.HiddenFor(m => m.IsActive)

                    <div class="form-body">
                        <h3 class="box-title">@ViewBag.Title</h3>
                        <hr />

                        <div class="row mb-3">
                            <label class="control-label col-md-3 text-right">Username</label>
                            <div class="col-md-3">
                                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Enter user name", required = "required" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="control-label col-md-3 text-right">Fulll Name</label>
                            <div class="col-md-3">
                                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", placeholder = "Enter full name", required = "required" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="control-label col-md-3 text-right">User Type</label>
                            <div class="col-md-3">
                                @Html.DropDownListFor(m => m.UserTypeId, ViewBag.UserTypeList as List<SelectListItem>, "Select User Type", new { @class = "form-control custom-select", required = "required" })
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="control-label col-md-3 text-right">Password</label>
                            <div class="col-md-3">
                                <input class="form-control dvPassword" id="Password" name="Password" placeholder="Password" type="password" value="@Model.Password" required="required">
                            </div>
                        </div>

                        <div class="row mb-3 align-items-center">
                            <label class="control-label col-md-3 text-right">Disabled</label>
                            <div class="col-md-3">
                                @Html.HiddenFor(x => x.IsActive)
                                <input type="checkbox" id="chkIsActive" name="chkIsActive"
                                       onchange="IsDisabledCheckBox('IsActive', 'chkIsActive');"
                                       @(Model.IsActive ? "" : "checked")
                                       data-color="#26c6da" class="js-switch" data-size="small" />
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-md-6 text-start">
                                <button type="submit" class="btn btn-primary">Save</button>
                                <a href="@Url.Action("Index", "Users")" class="btn btn-secondary">Close</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script src="~/assets/node_modules/bootstrap-switch/bootstrap-switch.min.js"></script>
<script src="~/assets/node_modules/switchery/switchery.min.js"></script>

@Scripts.Render("~/bundles/jsDataTableTheme")
<script type="text/javascript">
    $(document).ready(function (readyEvent) {
        var elems = Array.prototype.slice.call(document.querySelectorAll('.js-switch'));
        $('.js-switch').each(function () {
            new Switchery($(this)[0], $(this).data());
        });
    });

    function IsDisabledCheckBox() {
        $("#IsActive").val(!document.getElementById("chkIsActive").checked);
    }

</script>
