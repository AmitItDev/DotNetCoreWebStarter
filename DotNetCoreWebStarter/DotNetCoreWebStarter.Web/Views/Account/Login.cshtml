@model DotNetCoreWebStarter.Web.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login - Starter Pack</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@3.3.3/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gradient-to-br from-blue-100 to-white min-h-screen flex items-center justify-center relative overflow-hidden px-4">

    <!-- Background Blobs -->
    <div class="absolute top-[-100px] left-[-100px] w-[300px] h-[300px] bg-blue-200 rounded-full opacity-30 blur-3xl animate-pulse"></div>
    <div class="absolute bottom-[-120px] right-[-120px] w-[400px] h-[400px] bg-blue-300 rounded-full opacity-20 blur-2xl animate-pulse"></div>

    <!-- Main Container -->
    <div class="relative z-10 flex flex-col md:flex-row bg-white shadow-2xl rounded-xl overflow-hidden w-full max-w-4xl">

        <!-- Left Panel (hidden on mobile) -->
        <div class="hidden md:flex flex-col justify-center items-center bg-gradient-to-br from-blue-500 to-blue-600 text-white p-8 md:p-10 w-1/2">
            <img src="~/images/logo-design.png"class="h-16 mb-4" alt="Logo" />
            <h2 class="text-2xl font-semibold mb-2 text-center">Welcome to Dev</h2>
            <p class="text-sm text-blue-100 text-center">Secure login to access your dashboard</p>
        </div>

        <!-- Right Panel (Login Form — always visible) -->
        <div class="w-full md:w-1/2 p-6 sm:p-8">
            <!-- Logo only for mobile -->
            <div class="flex justify-center md:hidden mb-6">
                <img src="~/images/logo-design.png" class="h-12" alt="Logo" />
            </div>
            <h2 class="text-xl sm:text-2xl font-semibold text-blue-800 text-center mb-6">Login</h2>
            <form asp-action="Login" method="post" class="space-y-5">
              
                <div>
                    <label asp-for="Username" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="Username" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-blue-400" />
                    <span asp-validation-for="Username" class="text-red-500 text-sm"></span>
                </div>
                <div>
                    <label asp-for="Password" class="block text-sm font-medium text-gray-700"></label>
                    <input asp-for="Password" type="password" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-blue-400" />
                    <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                </div>
                <!-- General Error Message -->
                @if (ViewData.ModelState["General"] != null && ViewData.ModelState["General"].Errors.Count > 0)
                {
                    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative text-sm">
                        @foreach (var error in ViewData.ModelState["General"].Errors)
                        {
                            <p>@error.ErrorMessage</p>
                        }
                    </div>
                }

                <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition duration-300">
                    Login
                </button>
            </form>
        </div>

    </div>
</body>


</html>
